#! /bin/sh

sudo apt-get update

# Horrible -o option here only needed on Ubuntu 20.04, see: https://bit.ly/2ZVXPpS
sudo apt-get install -o Dpkg::Options::="--force-overwrite" -y \
  bat \
  ripgrep \
  fzf

# On Ubuntu, `bat` is installed as `batcat` so this symink is needed.
ln -s /usr/bin/batcat ~/bin/bat

wget -q https://github.com/Peltoche/lsd/releases/download/0.20.1/lsd_0.20.1_amd64.deb
sudo dpkg -i lsd_0.20.1_amd64.deb
rm -f lsd_0.20.1_amd64.deb

