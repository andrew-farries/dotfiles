#! /bin/bash

cmdName=$(basename $0)
containerName=$1
dbName=$2

if [ -z "$containerName" ]; then
  echo "usage $cmdName <name or id> [initialDb]"
  exit 1
fi

json=$(spawnctl get dc $containerName -o json)

host=$(echo $json | jq -r '.host')
port=$(echo $json | jq -r '.port')
user=$(echo $json | jq -r '.user')
password=$(echo $json | jq -r '.password')

PGPASSWORD=$password pgcli -w -h $host -p $port -U $user $dbName
